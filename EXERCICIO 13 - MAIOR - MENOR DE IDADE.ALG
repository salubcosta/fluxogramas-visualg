Algoritmo "Exercício 13 - Maior - Menor de idade"
Var
   nome: caractere
   idade: inteiro
Inicio
      escreva("Informe seu nome: ")
      leia(nome)
      
      escreva("Informe sua idade: ")
      leia(idade)
      
      se idade >= 18 entao
         escreva(nome," você é maior de idade")
      senao
         escreva(nome," você é menor de idade")
      fimse
Fimalgoritmo